---
/* Astro component for the "Research Paper" icon */
---

<svg
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 1 100 130"
    width="16"
    height="16"
    fill="none"
    stroke="currentColor"
    stroke-width="1.5"
    class="scholar-icon"
>
    <!-- Paper Body -->
    <rect
        x="10"
        y="10"
        width="80"
        height="110"
        rx="5"
        fill="#ffffff"
        stroke="currentColor"
        stroke-width="2"></rect>

    <!-- Folded Corner -->
    <polygon
        points="70,10 90,10 90,30"
        fill="#f0f0f0"
        stroke="currentColor"
        stroke-width="2"></polygon>

    <!-- Lines of text -->
    <line x1="20" y1="30" x2="80" y2="30"></line>
    <line x1="20" y1="40" x2="80" y2="40"></line>
    <line x1="20" y1="50" x2="80" y2="50"></line>
    <line x1="20" y1="60" x2="80" y2="60"></line>
    <line x1="20" y1="70" x2="80" y2="70"></line>
    <line x1="20" y1="80" x2="80" y2="80"></line>
    <line x1="20" y1="90" x2="80" y2="90"></line>
    <line x1="20" y1="100" x2="80" y2="100"></line>
    <line x1="20" y1="110" x2="80" y2="110"></line>
</svg>
