---
import GitHub from "@/icons/github.astro";
import YouTube from "@/icons/youtube.astro";
import Section from "../Section.astro";

import { projects } from "@cv";
---

<Section title="Projects">
  <ul>
    {
      projects.map(({ description, highlights, name, github, youtube }) => (
        <li>
          <article>
            <div class="article-inner">
              <header>
                <h3 class="project-header">
                  <span class="project-name">{name}</span>

                  {github && (
                    <a
                      class="code-link"
                      href={github}
                      target="_blank"
                      title={`View project source code ${name}`}
                    >
                      <GitHub />
                    </a>
                  )}

                  {youtube && (
                    <a class="code-link" href={youtube} target="_blank">
                      <YouTube />
                    </a>
                  )}
                </h3>
                <p>{description}</p>
              </header>
              <footer>
                {highlights.map((highlight) => (
                  <div class="tag" title={highlight}>
                    <span>{highlight}</span>
                  </div>
                ))}
              </footer>
            </div>
          </article>
        </li>
      ))
    }
  </ul>
</Section>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    max-width: 750px;
    gap: 1rem;
    margin-inline: -16px;
  }

  article {
    border-radius: 8px;
    border: 1px solid #f2f2f2;
    gap: 16px;
    display: flex;
    flex-direction: column;
    padding: 16px;
    height: 100%;
    transition: box-shadow 0.3s ease;
  }

  article:hover {
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .project-header {
    display: flex;
    align-items: center;
    gap: 8px;
    flex-wrap: wrap;
    margin-bottom: 4px;
  }

  .project-name {
    font-size: 1rem;
  }

  article p {
    font-size: 0.75rem;
    line-height: 1.2rem;
    margin-bottom: 4px;
  }

  footer {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    font-size: 0.6rem;
    padding-top: 10px;
  }

  .code-link {
    margin-left: 6px;
    color: #777;
  }

  .code-link:hover {
    color: #222;
  }

  .article-inner {
    padding: 8px;
  }

  @media (width <= 700px) {
    ul {
      margin-inline: 0px;
    }

    article {
      border: none;
      box-shadow: 0 1px 1px #f2f2f2;
      padding: 0 0 16px 0;
    }
  }
</style>
